<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etAddTopicName"
        android:background="#00000000"
        android:hint="Topic you want to do"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/ivSeparator"
        android:background="@color/colorPrimaryLight"
        android:layout_below="@+id/etAddTopicName"
        android:layout_marginTop="16dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivDateImage"
        android:layout_below="@+id/ivSeparator"
        android:src="@drawable/ic_date_range_black_24dp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDateToStore"
        android:text="@string/sample_date"
        android:layout_below="@id/ivSeparator"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="32dp"
        android:background="#00000000"
        android:layout_marginTop="48dp"
        android:textSize="14sp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/ivBottomDate"
        android:background="@color/colorPrimaryLight"
        android:layout_below="@+id/tvDateToStore"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivTimeImage"
        android:layout_below="@+id/ivBottomDate"
        android:src="@drawable/ic_access_time_black_24dp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/ivBottomTime"
        android:background="@color/colorPrimaryLight"
        android:layout_below="@+id/tvTimeToStore"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTimeToStore"
        android:hint="@string/sample_time"
        android:layout_below="@id/ivBottomDate"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="32dp"
        android:background="#00000000"
        android:layout_marginTop="48dp"/>

    <Button
        android:id="@+id/btSubmitAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivBottomTime"
        android:layout_margin="50dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/border"
        android:scaleType="fitCenter"
        android:src="@drawable/submit"
        android:text="SAVE"
        android:textSize="14sp" />


</RelativeLayout>

</LinearLayout>